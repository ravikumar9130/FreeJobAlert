<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs'); %>
    <title>Railway Jobs</title>
</head>

<body>
    <%- include('./partials/header.ejs'); %>
    <div
      style="margin-bottom: 0px"
      class="alert bg-dark text-light text-center"
      role="alert"
    >
      <h4>Latest Railway Job Notifications</h4>
    </div>

    <div class="container-fluid bg-light">
      <div class="container">
        <div class="row">
          <div class="col-12 py-3">
            <div class="h3 text-center">Railway Jobs</div>

            <ol class="list-group">


                <% for(var i =0 ; i < railwayJobs.length; i++){ %>

              <li
                class="
                  shadow
                  my-3
                  list-group-item
                  d-flex
                  justify-content-between
                  align-items-center
                  py-3
                "
              >
                <div class="ms-3  col-md-4  fw-bold">
                  <%- railwayJobs[i].Title %>
                </div>
                
                <div class="col-md-2  d-none d-sm-block">
                  <small class="text-muted  "><%- railwayJobs[i].Postdate %></small>
                </div>
                <div class="col-md-2 d-none d-sm-block">
                  <span class="badge bg-dark  rounded-pill"><%- railwayJobs[i].TotalVacancy %></span>
                </div>
              
                <div class="col-md-2  ">
                  <a href="job-details/<%= railwayJobs[i]. _id %>" class="btn btn-warning fw-bold"> view Details </a>
                </div>
              </li>
              <% } %>




            </ol>
          </div>
        </div>
      </div>
    </div>
    <%- include('./partials/footer.ejs'); %>
    <%- include('./partials/active-link.ejs'); %>
</body>
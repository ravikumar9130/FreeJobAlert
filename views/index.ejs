          <div class="card-header">
            <h3 class="h3 text-center pt-2">Police Defence Jobs</h3>
          </div>
          <ul class="list-group">
            <% for(var i = 0; i < 5; i++) {%>
              <li class="list-group-item py-3"> <a class="text-dark" style="text-decoration: none;" href="job-details/<%= latestJobs[i]. _id %>"> <%= latestJobs[i].Title %></a>
               </li>
          <% } %> 
          </ul>
        </div>
      </div>
    </div>
  </div>
 </div>
 <%- include('./partials/footer.ejs'); %>
</body>
</html>
